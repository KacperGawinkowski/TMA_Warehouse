@page "/addItem"
@inherits ItemFormBase

<PageTitle>Item Form</PageTitle>

@if (Item != null)
{
    <EditForm Model="@Item" OnValidSubmit="HandleValidSubmit">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="form-group">
            <label for="Name">Name</label>
            <InputText id="Name" @bind-Value="Item.Name" class="form-control" />
        </div>

        <div class="form-group">
            <label for="ItemGroupId">Item Group</label>
            <select id="ItemGroupId" @bind="@Item.ItemGroupId" class="form-control">
                <option value="">Select Item Group</option>
                @foreach (var group in ItemGroups)
                {
                    <option value="@group.Id">@group.Name</option>
                }
            </select>
        </div>

        <div class="form-group">
            <label for="Quantity">Quantity</label>
            <InputNumber id="Quantity" @bind-Value="Item.Quantity" class="form-control" />
        </div>

        <div class="form-group">
            <label for="PriceWithoutVAT">Price Without VAT</label>
            <InputNumber id="PriceWithoutVAT" @bind-Value="Item.PriceWithoutVAT" class="form-control" />
        </div>

        <div class="form-group">
            <label for="Status">Status</label>
            <InputText id="Status" @bind-Value="Item.Status" class="form-control" />
        </div>

        <div class="form-group">
            <label for="StorageLocation">Storage Location</label>
            <InputText id="StorageLocation" @bind-Value="Item.StorageLocation" class="form-control" />
        </div>

        <div class="form-group">
            <label for="ContantPerson">Contact Person</label>
            <InputText id="ContantPerson" @bind-Value="Item.ContantPerson" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
    </EditForm>
}
else
{
    <p>Loading...</p>
}